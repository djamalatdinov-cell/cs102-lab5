#include <iostream>
using namespace std;
int main() {

    for (int limit = 10000; limit <= 100000; limit += 10000) {
        double pi = 0;
        for (int i = 1; i <= limit; i++)
            pi += (i % 2 == 0 ? -1.0 : 1.0) / (2 * i - 1);
        pi *= 4;
        cout << "i = " << limit << " Pi = " << pi << endl;
    }

    return 0;
}
